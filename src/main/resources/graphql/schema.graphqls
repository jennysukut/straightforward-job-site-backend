type Query {
  findAllRoles(limit: Int): [Role]
}

type Mutation {
  saveRole(requestBody: RoleInput): Role
  saveAccount(requestBody: AccountInput) : Account
}

input AccountInput {
  id: ID
  name: String
  label: String
  password: String
  enabled: Boolean
  roles: [RoleInput]
}

input RoleInput {
  id: ID
  name: String
  label: String
}

type Role {
  id: ID
  name: String
  label: String
}

type Account {
  id: ID
  name: String
  label: String
  enabled: Boolean
  roles: [Role]
}
